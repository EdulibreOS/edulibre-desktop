' Gambas module file

Public Settings_Core_Innova As New Settings(Desktop.ConfigDir &/ "Innova/Innova_Config.conf")

Public Sub Init_01()
  
  M_Theme.IconTheme
  ' M_Theme.Show_Theme
  Init_02
  
  Wait 0.2
  
End

Public Sub Init_02()
  
  M_Theme.Show_Theme
  Init_03
  Wait 0.2
  
End

Public Sub Init_03()
  
  Dim sResult As String 
  Dim iShow As Integer
  'Application.Env["APPMENU_DISPLAY_BOTH"] = "1"
  
  'f_launcher.Show
  
  Try sResult = Settings_Core_Innova["Launcher/Style_Launcher"]
  iShow = Settings_Core_Innova["Launcher/iShow", f_launcher]
  ' Try iShow = Settings_Core_Innova["Launcher/Show"]
  
  Wait 0.1
  
  'If iShow = 1 Then
  '  f_launcher.Show
  'Else 
  'f_launcher.Close 
  ' If iShow = 0 Then  
  '   f_launcher.Show
  ' Else If iShow = 1 Then
  '   f_launcher.Show
  ' Endif
  'Endif
  
  If sResult = "Tablet" Then
    f_launcher.Visible = If(f_launcher.Visible = 0, 1, 0)  
  Else
    If sResult = "Mini" Then
      f_launcher_mini.Visible = If(f_launcher_mini.Visible = 0, 1, 0)  
    Else If sResult = "CNB" Then
      f_launcher_cnb_mini.Visible = If(f_launcher_cnb_mini.Visible = 0, 1, 0)  
    Endif
    
  Endif
  
End

Public Sub Init_03001()
  
  Dim sResult As String 
  'Dim iShow As Integer
  'Application.Env["APPMENU_DISPLAY_BOTH"] = "1"
  
  'f_launcher.Show
  
  Try sResult = Settings_Core_Innova["Launcher/Style_Launcher"]
  ' Try iShow = Settings_Core_Innova["Launcher/Show"]
  
  Wait 0.2
  If sResult = "Mini" Then
    f_launcher_mini.Show
  Endif
  
  If sResult = "Tablet" Then
    f_launcher.Show
  Endif
  
  If sResult = "CNB" Then
    f_launcher_cnb_mini.Show
  Endif
  
End
