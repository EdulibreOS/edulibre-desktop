End

Public Sub Form_Deactivate()
  
  If m_core.iShow = True Then
    f_date.show
  Endif
  
  Wait 0.1
  
  If m_core.iShow = False Then
    f_date.Close
  Endif
  M_Core.iShow = False
  
End

