Public Sub Exec(Optional Args As String)
  
  Dim ars As String[]
  Dim ars3 As String[]
  Dim ars2 As New String[]
  Dim s As String
  Dim s2 As String
  Dim i As Integer
  
  ars = Split(_$Exec, " ")
  'remove all inclusion pos
  
  For Each s In ars
    If Not (s Begins "%") Then
      ars2.Add(s)
    Endif
  Next
  
  If Not args Then 
    Try Exec ars2
    
    If Error Then Error "Can't execute " & ars2.Join(" ")
    ' If Error Then Exec ars
  Else
    
    Try Exec ars2.Insert(args)
    If Error Then Error "Can't execute " & ars2.Insert(args).Join(" ")
  Endif
  
End

Public Sub Exec_old(Optional Args As String)
  
  Dim ars As String[]
  Dim i As Integer
  
  'ars1 = Split(_$Exec, " ")
  ars = Split(_$Exec, " ", "'")
  
  If ars.Count > 0 Then
    
    If Not Args Then
      Exec [ars[0]]
    Else
      For i = 0 To ars.Max
        If ars[i] Begins "%" Then 
          Try ars.Remove(i, ars.Max - i)
          Break
        Endif
      Next
      If InStr(ars[ars.Max], "%") Then
        ars[ars.Max] = Args
      Endif
      Exec ars
    Endif
  Endif
Catch
  
End

