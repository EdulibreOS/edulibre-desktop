Public Function GetName(Language As String) As String
  
  Dim s As String
  
  If $sLastName Begins Language & ":" Then Return Right($sLastName, - (Len(Language) + 1))
  
  s = GetValue(_$Path, "Name[" & Language & "]")
  $sLastName = Language & ":" & s
  If s Then
    Return s
  Endif
  
End

